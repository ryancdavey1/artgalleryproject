<%= form_for(@artwork) do |f| %>
  <div class="form-group">
    <%= f.label :name , "name"%><br>
    <%= f.text_field :name, class: "form-control" %></div>

    <div class="form-group">
    <%= f.label :description, "description" %><br>
    <%= f.text_area :description, class: "form-control" %></div>

  <div class="form-group">
    <%= f.label :price, "price in dollars($)" %><br>
    <%= f.number_field :price, class: "form-control" %></div>

  <div class="form-group">
    <%= f.label :category, "category (optional)" %><br>
    <%= f.text_field :category, class: "form-control" %></div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %> 